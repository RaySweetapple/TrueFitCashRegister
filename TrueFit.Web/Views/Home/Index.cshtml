@model HomeViewModel
@{
    ViewData["Title"] = "Interview Project - Ray Sweetapple";
}

<h2>Upload File</h2>
<p class="">
    Please upload a txt file. 
    Once submitted, a new file will download immediately if there are no errors.
</p>
<div class="validation-error-line"><span></span></div>
<form asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()
 
    <div class="container">
        <div class="row">
         
            <input type="file" asp-for="@Model.UploadFile" name="UploadFile" class="form-control" />
            <span asp-validation-for="@Model.UploadFile" class="text-danger mt-2"></span>
           
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary" id="data-form-submit">Upload</button>
    </div>
    
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}
      

